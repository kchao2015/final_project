<%= form_for [@trip, @pack] do |form| %>
  <div class="form-group">
    <%= form.label :item_id %>
    <%= form.collection_select :item_id, Item.order(:name), :id, :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, class: "form-control", placeholder: "Enter the desired quantity" %>
  </div>
  <%= form.button 'Add Item', class: "btn btn-success" %>
  <%= link_to "New Item", new_item_path, class: 'btn btn-sm btn-info' %>
<% end %>