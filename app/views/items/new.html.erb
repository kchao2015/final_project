<%= form_for @item do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name, {},{class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :season_id %>
    <%= form.collection_select :season_id, Season.order(:name), :id, :name, {},{class: "form-control"} %>
  </div>
  <%= form.button 'Create Item', class: "btn btn-success" %>
<% end %>