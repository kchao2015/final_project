<%= form_for @trip do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter a name for your trip" %>
  </div>
  <div class="form-group">
    <%= form.label :city_id %>
    <%= form.collection_select :city_id, City.order(:name), :id, :name, {},{class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= form.label :duration %>
    <%= form.text_field :duration, class: "form-control", placeholder: "Enter your trip duration in days" %>
  </div>
  <div class="form-group">
    <%= form.label :season_id %>
    <%= form.collection_select :season_id, Season.order(:name), :id, :name, {},{class: "form-control"} %>
  </div>
  <%= form.button 'Create Trip', class: "btn btn-success" %>
  <%= link_to "New Destination", new_city_path, class: 'btn btn-sm btn-success' %>
<% end %>